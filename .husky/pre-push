#!/usr/bin/env sh

# Colors for terminal output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

echo "${YELLOW}Running pre-push checks for Playwright project...${NC}"

# TypeScript type checking
echo "${YELLOW}Step 1/2: Running TypeScript type check...${NC}"
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "${RED}‚ùå TypeScript check failed!${NC}"
  echo "${YELLOW}Fix type errors before pushing.${NC}"
  exit 1
fi
echo "${GREEN}‚úÖ TypeScript check passed${NC}"

# ESLint check (full codebase)
echo "${YELLOW}Step 2/2: Running ESLint on test files...${NC}"
npm run lint
if [ $? -ne 0 ]; then
  echo "${RED}‚ùå ESLint check failed!${NC}"
  echo "${YELLOW}Fix linting errors before pushing.${NC}"
  exit 1
fi
echo "${GREEN}‚úÖ ESLint check passed${NC}" 

echo "${GREEN}All pre-push checks passed! üöÄ${NC}"
exit 0

